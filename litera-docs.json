{
  "openapi": "3.0.0",
  "info": {
    "title": "Litera API",
    "description": "Dokumentasi API untuk Litera - Platform review buku berbasis Google Books API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Endpoint autentikasi pengguna"
    },
    {
      "name": "books",
      "description": "Endpoint pencarian dan detail buku"
    },
    {
      "name": "reviews",
      "description": "Endpoint ulasan buku"
    },
    {
      "name": "users",
      "description": "Endpoint data pengguna"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["auth"],
        "summary": "Register user baru",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" },
                  "image": { "type": "string", "format": "binary" }
                },
                "required": ["username", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User berhasil didaftarkan" },
          "400": { "description": "Validasi gagal atau email sudah digunakan" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login berhasil, token diberikan" },
          "400": { "description": "Login gagal" }
        }
      }
    },
    "/books/search": {
      "get": {
        "tags": ["books"],
        "summary": "Cari buku berdasarkan keyword",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Daftar buku dari Google Books API" },
          "500": { "description": "Gagal mengambil data buku" }
        }
      }
    },
    "/books/{bookId}": {
      "get": {
        "tags": ["books"],
        "summary": "Ambil detail buku + review",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Detail buku dan review" },
          "500": { "description": "Gagal mengambil detail buku" }
        }
      }
    },
    "/reviews": {
      "post": {
        "tags": ["reviews"],
        "summary": "Tambah review untuk buku (auth required)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "bookId": { "type": "string" },
                  "comment": { "type": "string" }
                },
                "required": ["bookId", "comment"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Review berhasil ditambahkan" },
          "400": { "description": "Gagal validasi atau gagal membuat review" }
        }
      }
    },
    "/reviews/{bookId}": {
      "get": {
        "tags": ["reviews"],
        "summary": "Ambil semua review untuk buku",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Daftar review buku" }
        }
      }
    },
    "/reviews/{reviewId}": {
      "put": {
        "tags": ["reviews"],
        "summary": "Update review (auth required)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "comment": { "type": "string" }
                },
                "required": ["comment"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Review berhasil diupdate" },
          "403": { "description": "Unauthorized - bukan pemilik review" },
          "400": { "description": "Update gagal" }
        }
      },
      "delete": {
        "tags": ["reviews"],
        "summary": "Hapus review (auth required)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Review berhasil dihapus" },
          "403": { "description": "Unauthorized - bukan pemilik review" },
          "400": { "description": "Gagal menghapus review" }
        }
      }
    },
    "/users/all": {
      "get": {
        "tags": ["users"],
        "summary": "Ambil semua user",
        "responses": {
          "200": { "description": "Daftar user" },
          "400": { "description": "Gagal mengambil data user" }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": ["users"],
        "summary": "Ambil user berdasarkan ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "User ditemukan" },
          "404": { "description": "User tidak ditemukan" }
        }
      },
      "put": {
        "tags": ["users"],
        "summary": "Update user",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "image": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User berhasil diupdate" },
          "400": { "description": "Update gagal" }
        }
      },
      "delete": {
        "tags": ["users"],
        "summary": "Hapus user",
        "responses": {
          "200": { "description": "User berhasil dihapus" },
          "400": { "description": "Gagal menghapus user" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
